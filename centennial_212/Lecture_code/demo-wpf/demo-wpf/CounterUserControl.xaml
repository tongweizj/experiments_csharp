<UserControl x:Class="demo_wpf.CounterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:demo_wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnDecrease" Content="-" Grid.Column="0" Margin="5" Padding="10,5" Click="btnDecrease_Click"/>
        <TextBlock x:Name="txtCount"  Grid.Column="1" Margin="5" Padding="10,5" Text="0" TextAlignment="Center" Width="50"/>
        <Button x:Name="btnIncrease" Content="+" Grid.Column="2" Margin="5" Padding="10,5" Click="btnIncrease_Click"/>
    </Grid>
</UserControl>