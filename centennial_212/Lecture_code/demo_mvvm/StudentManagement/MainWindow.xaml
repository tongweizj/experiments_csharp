<Window x:Class="StudentManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Main menu -->
        <Menu Grid.ColumnSpan="3"
              FontSize="20">
            <MenuItem Header="_View">
                <MenuItem Header="_Students" />
                <MenuItem Header="_Courses" />
            </MenuItem>
        </Menu>

        <!-- Header -->
        <Grid Grid.Row="1"
              Grid.ColumnSpan="3"
              Background="LightGreen">
            <StackPanel HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <Image Source="/Images/logo.png"
                       Width="60"
                       Margin="5" />
                <TextBlock Text="Student Management"
                           FontSize="30"
                           Foreground="White"
                           VerticalAlignment="Center" />
            </StackPanel>
        </Grid>

        <!-- Student list -->

        <Grid x:Name="studentListGrid"
              Grid.Row="2"
              Background="#777">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Button Margin="10"
                        Width="75"
                        Click="ButtonAdd_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/add.png"
                               Height="18"
                               Margin="0 0 5 0" />
                        <TextBlock Text="Add" />
                    </StackPanel>
                </Button>
                <Button Content="Delete"
                        Width="75"
                        Margin="0 10 10 10" />
            </StackPanel>
            <ListView Grid.Row="3"
                      ItemsSource="{Binding students}"
                      SelectedItem="{Binding SelectedStudent,Mode=TwoWay}"
                      DisplayMemberPath="FirstName"
                      Margin="10 0 10 10">
            </ListView>
        </Grid>

        <!-- Student detail -->
        <StackPanel Grid.Row="2"
                    Grid.Column="1"
                    Margin="10">
            <Label>Firstname:</Label>
            <TextBox Text="{Binding SelectedStudent.FirstName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
            <Label>Lastname:</Label>
            <TextBox Text="{Binding SelectedStudent.LastName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />

            <Label>Program:</Label>

            <TextBox Text="{Binding SelectedStudent.Program,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!-- Statusbar -->
        <StatusBar Grid.Row="3"
                   Grid.ColumnSpan="3">
            <StatusBarItem FontSize="20"
                           Content=" (c) Centennial College" />
        </StatusBar>
    </Grid>
</Window>
