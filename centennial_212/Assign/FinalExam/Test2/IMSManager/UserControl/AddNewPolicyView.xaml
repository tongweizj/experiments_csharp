<UserControl x:Class="IMSManager.AddNewPolicyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:IMSManager"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid  Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Content="Agent"
                   Margin="15,5"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center" />
            <Label Content="Product"
                   Grid.Row="1"
                   Margin="15,5"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center" />
            <Label Content="Policy ID"
                   Grid.Row="2"
                   Margin="15,5"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center" />
            <Label Content="Policy Start Date"
                   Grid.Row="3"
                   Margin="15,5"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center" />
            <Label Content="Annual Premium"
                   Grid.Row="4"
                   Margin="15,5"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center" />
            <Label Content="Insured"
                   Grid.Row="5"
                   Margin="15,5"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center" />
            <ComboBox Grid.Column="1"
                      Margin="5,5,20,5" 
                      
                      >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Id}" />
                            <TextBlock Text="  " />
                            <TextBlock Text="{Binding Fname}" />
                            <TextBlock Text="  " />
                            <TextBlock Text="{Binding Lname}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <ComboBox Grid.Column="1"
                      Grid.Row="1"
                      Margin="5,5,20,5" 
                      
                      
                      
                      >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Code}" />
                            <TextBlock Text="  " />
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBox Grid.Column="1"
                     Grid.Row="2"
                     Margin="5,5,20,5"
                     TextWrapping="Wrap"
                      />
            <DatePicker Grid.Row="3"
                        Grid.Column="1"
                        Margin="5,5,20,5"
                        DisplayDate="4/15/2024"
                        DisplayDateStart="1/1/2024"
                        DisplayDateEnd="5/31/2025"
                         />
            <TextBox Grid.Column="1"
                     Grid.Row="4"
                     Margin="5,5,20,5"
                     TextWrapping="Wrap"
                     />
            <TextBox Grid.Column="1"
                     Grid.Row="5"
                     Margin="5,5,20,5"
                     TextWrapping="Wrap" 
                     
                     />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Content="Save"
                    Margin="60,5"
                    Background="CornflowerBlue"
                    Foreground="Yellow"
                    Command="{Binding SaveCommand}" />
            <Button Content="Cancel"
                    Grid.Column="1"
                    Margin="60,5"
                    Background="CornflowerBlue"
                    Foreground="Yellow"
                    Command="{Binding CancelCommand}" />
        </Grid>
    </Grid>
</UserControl>
