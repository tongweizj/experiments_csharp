<Window x:Class="IMSManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMSManager"
        xmlns:viewModel="clr-namespace:IMSManager.ViewModels"
        mc:Ignorable="d"
        Title="Final Exam"
        Height="450"
        Width="800"
        FontSize="14">

    <!-- add necessary info here so that this view can access MainWindow View Model -->
    
    
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Background="CadetBlue">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock Text="Manage Insurance Policies Under Enforcement"
                           FontSize="24"
                           VerticalAlignment="Center"
                           FontFamily="Ink Free" />
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <Button Content="List Policy Details"
                    Width="150"
                    Background="CornflowerBlue"
                    Foreground="Yellow"
                    Command="{Binding View1Command }" />
            <Button Content="Add Newly Sold Policy"
                    Width="150"
                    Background="LightBlue"
                    Foreground="Yellow"
                    Command="{Binding View2Command }"></Button>
            <Button Content="Exit"
                    Width="150"
                    Background="CornflowerBlue"
                    Foreground="Yellow"
                    Command="{Binding ExitCommand}" />
        </StackPanel>
        <ContentControl Grid.Row="2"
                        Content="{Binding CurrentViewModel}"></ContentControl>
    </Grid>
</Window>
